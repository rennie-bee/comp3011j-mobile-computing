<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_body"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:orientation="vertical"
    android:background="@drawable/fragment_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>
    <!-- The first text editing area, for username input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_register_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="USERNAME"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_register_username"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="Please enter your username"
            android:textStyle="italic"
            android:background="#FF8C7F"/>
    </LinearLayout>

    <!-- The second text editing area, for first password input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_register_password1"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_register_password1"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:inputType="textPassword"
            android:hint="Please enter your password"
            android:textStyle="italic"
            android:background="#FF9A8F"/>
    </LinearLayout>

    <!-- The third text editing area, for second password input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_register_password2"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_register_password2"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="Please enter your password again"
            android:textStyle="italic"
            android:background="#FFA49A"
            android:inputType="textPassword" />
    </LinearLayout>

    <!-- The fourth text editing area, for image code input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_register_code"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="VERIFICATION"
            android:textStyle="bold"
            android:textSize="13dp"/>
        <EditText
            android:id="@+id/et_register_code"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="Enter the characters in the image"
            android:textStyle="italic"
            android:background="#FFB1A8"/>


    </LinearLayout>

    <!-- display the image code -->
    <ImageView
        android:id="@+id/iv_register_code"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="onClick" />

    <!-- back button and register button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="BACK"
            android:onClick="onClick"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/bt_register"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="REGISTER"
            android:onClick="onClick"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"/>


    </LinearLayout>




</LinearLayout>
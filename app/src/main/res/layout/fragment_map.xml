<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.map.MapFragment"
    android:background="@drawable/fragment_background">

<!--    Display a city map image to remind of map using-->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/city" />

    <!--<TextView
        android:id="@+id/text_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <!--A button used to send user to BaiduMap Page-->
    <Button
        android:id="@+id/bt_to_map"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Check Map"
        android:textStyle="bold"/>

    <!-- Display a weather image to remind of weather using-->
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/weather" />

    <!--A button used to send user to Weather Page-->
    <Button
        android:id="@+id/bt_to_weather"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Check Weather"
        android:textStyle="bold"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<!--Use card-view to represent a note with an orange color-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp">

    <!--The Linearlayout sets actual content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FEADA6">

        <!--This textview is the title part-->
        <TextView
            android:id="@+id/note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="-10dp"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <!--This textview is for decoration-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--------------------------------------------------"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="40sp" />
        <!--This textview is the content/detail part-->
        <TextView
            android:id="@+id/note_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--------------------------------------------------"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/note_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:textStyle="italic|bold"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>